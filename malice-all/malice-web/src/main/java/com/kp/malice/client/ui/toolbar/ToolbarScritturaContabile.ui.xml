<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:d="urn:import:com.kp.malice.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="resources"
		type="com.kp.malice.client.ui.resources.MaliceResources"></ui:with>
	<ui:style>
		.width {
			width: 100px;
		}
		
		.button {
			cursor: pointer;
			width: 40px;
			height: 27px;
			margin-top: 18px;
			margin-right: 15px;
			float: right;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="{resources.main.toolbarContainer}">
			<div class="{resources.main.toolsContainer}">
				<div class="{resources.main.separatore} {resources.main.floatLeft}" />
				<div class="{resources.main.calendarioTitoli}">
					<div class="{resources.main.calendario}">
						<h1>
							Scritture Contabili del
						</h1>
						<d:UtcSafetyDateBox ui:field="dataRegistrazione" />
					</div>
				</div>
				<div class="{resources.main.separatore} {resources.main.floatLeft}" />
				<div class="{resources.main.separatore}" />
				<g:Button stylePrimaryName="{style.button} {resources.main.downloadButton}"
					ui:field="downlaodButton" title="Download Lista Scritture Contabili" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 