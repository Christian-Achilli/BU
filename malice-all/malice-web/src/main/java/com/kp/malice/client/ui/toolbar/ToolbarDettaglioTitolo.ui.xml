					<t:RevocaAnnulloWidget ui:field="revocaAnnulloWidget" />
					<div ui:field="buttonsTitleOperation">
						<div class="{style.elementoButton}" ui:field='divIncasso'>
							<g:Button stylePrimaryName="{resources.main.greyButton} {style.buttons}"
