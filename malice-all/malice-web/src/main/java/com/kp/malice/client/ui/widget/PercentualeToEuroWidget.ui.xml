		.primoTd {
			width: 10%;
			border: none;
		}
		
		.secondoTd {
			width: 70%;
			border: none;
		}
		
		.terzoTd {
			border-top-color: #999;
			border-top-style: dotted;
			border-top-width: 1px;
		}
		
		.quartoTd {
			border-top-color: #999;
			border-top-style: dotted;
			border-top-width: 1px;
		}
		
		.tablePercentualeEuro input {
			border-left: none;
			border-right: none;
			border-bottom: none;
			border-top: none;
		}
		
		.widthInput{
	       width: 100%;
}
		
