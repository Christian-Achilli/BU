	<g:HTMLPanel>
		<table class="{style.tablePercentualeEuro}">
			<tr>
				<td class="{style.primoTd}">
					% </td>
				<td class="{style.secondoTd}">
					<f:PercentualeTextBox ui:field="percentualeTextBox" stylePrimaryName="{style.widthInput}"/>
				</td>
			</tr>
			<tr>
				<td class="{style.terzoTd}">
