<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

	<ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555
		}
		
		.label {
			font-weight: bold;
		}
		
		.button {
			font-weight: bold;
			height: 30px;
			width: 100px;
			color: #000;
		}
	</ui:style>

	<g:DecoratorPanel>
		<g:HTMLPanel>
			<table>
				<tr>
					<td colspan='2' align='center' class='{style.header}'>
						<ui:msg key='agentInfoFormTitle'>Agency</ui:msg>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='agentInfoFormMaliceCode'>Malice Code: *</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='maliceCodeBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='agentInfoFormRmaCode'>RMA Code: *</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='rmaCodeBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='agentInfoFormLoydsCode'>Loyds Code: *</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='loydsCodeBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>Age:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='agencyBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='agentInfoFormFirstName'>Name of company:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='companyNameBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>RUI number:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='ruiNumberBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>RUI acceptance date:</ui:msg>
					</td>
					<td>
						<d:DateBox ui:field='ruiAcceptanceDateBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='agentInfoFormAddress'>Address:</ui:msg>
					</td>
					<td>
						<g:TextArea ui:field='addressBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>City:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='cityBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>Zip code:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='zipCodeBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>Email:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='emailBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>Telephone number:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='telephoneNumberBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg>Iban account:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='ibanAccountBox' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<g:Label ui:field='openingClosureDateLabel' />
					</td>
					<td>
						<g:Label ui:field='openingClosureDateValue' />
					</td>
				</tr>
				<tr>
					<td align='center'>
						<g:Button ui:field='updateButton' styleName="{style.button}">
							<ui:msg>Update Agency</ui:msg>
						</g:Button>
					</td>
					<td align='center'>
						<g:Button ui:field='createButton' styleName="{style.button}">
							<ui:msg>Create Agency</ui:msg>
						</g:Button>
					</td>
				</tr>
				<tr>
					<td align='center'>
						<g:Button ui:field='deleteButton' styleName="{style.button}">
							<ui:msg key='agentInfoFormDeleteButton'>Delete Agency</ui:msg>
						</g:Button>
					</td>
					<td align='center'>
						<g:Button ui:field='closeButton' styleName="{style.button}">
							<ui:msg>Close Agency</ui:msg>
						</g:Button>
						<g:Button ui:field='openButton' styleName="{style.button}">
							<ui:msg>Open Agency</ui:msg>
						</g:Button>
					</td>
				</tr>
			</table>
			* mandatory field
		</g:HTMLPanel>
	</g:DecoratorPanel>
</ui:UiBinder>